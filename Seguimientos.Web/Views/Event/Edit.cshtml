@model Event

@{
    ViewData["Title"] = "Editar Evento";
}

<h2>Editar Evento</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input type="datetime-local" class="form-control" asp-for="StartTime" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input type="datetime-local" class="form-control" asp-for="EndTime" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsReminderSet" class="control-label"></label>
        <input type="checkbox" class="form-control" asp-for="IsReminderSet" />
    </div>
    <div class="form-group">
        <label asp-for="ReminderTime" class="control-label"></label>
        <input type="datetime-local" class="form-control" asp-for="ReminderTime" />
        <span asp-validation-for="ReminderTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-success">Regresar</a>
</form>
