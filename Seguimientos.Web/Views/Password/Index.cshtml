@model PasswordGenerator

@{
    ViewData["Title"] = "Password Generator";
}

<h2>Password Generator</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="Length">Length</label>
        <input type="number" class="form-control" asp-for="Length" min="1" required />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IncludeLowercase" />
        <label class="form-check-label" for="IncludeLowercase">Include Lowercase Letters</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IncludeUppercase" />
        <label class="form-check-label" for="IncludeUppercase">Include Uppercase Letters</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IncludeNumbers" />
        <label class="form-check-label" for="IncludeNumbers">Include Numbers</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IncludeSymbols" />
        <label class="form-check-label" for="IncludeSymbols">Include Symbols</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Generate Password</button>
</form>

<a asp-action="List" class="btn btn-secondary mt-3">View Stored Passwords</a>
