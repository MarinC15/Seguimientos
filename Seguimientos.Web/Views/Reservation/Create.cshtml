@model Reservation

@{
    ViewData["Title"] = "Crear Reserva";
}

<h2>Crear Reserva</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input type="text" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationDate" class="control-label"></label>
        <input type="date" class="form-control" asp-for="ReservationDate" />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceName" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ServiceName" />
        <span asp-validation-for="ServiceName" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="IsConfirmed" class="control-label"></label>
        <input type="checkbox" asp-for="IsConfirmed" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </div>
    
</form>
